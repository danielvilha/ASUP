            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="30dp"
                android:paddingBottom="20dp"
                android:paddingTop="10dp"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/radioGroupEconomicQuest4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radioButtonEconomicQuest5A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="5dp"
                        android:text="@string/economic_quest5_answer1" />

                    <RadioButton
                        android:id="@+id/radioButtonEconomicQuest5B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="5dp"
                        android:text="@string/economic_quest5_answer2" />

                    <RadioButton
                        android:id="@+id/radioButtonEconomicQuest5C"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="5dp"
                        android:text="@string/economic_quest5_answer3" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>