                    <RadioButton
                        android:id="@+id/radioButtonEconomicQuest3B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="5dp"
                        android:text="@string/economic_quest3_answer2" />

                    <RadioButton
                        android:id="@+id/radioButtonEconomicQuest3C"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingBottom="5dp"
                        android:text="@string/economic_quest3_answer3" />

                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewEconomicQuest4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
