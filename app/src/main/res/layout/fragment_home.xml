<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/buttonEconomic"
        style="@android:style/Widget.Material.Button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:background="@drawable/btn_home_personal"
        android:scaleType="centerCrop"
        android:padding="20dp"
        android:gravity="left|center_vertical"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:textStyle="bold"
        android:text="@string/personal" />

    <Button
        android:id="@+id/buttonEnvironmental"
        style="@android:style/Widget.Material.Button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:background="@drawable/btn_home_cooperative"
        android:scaleType="centerCrop"
        android:padding="20dp"
        android:gravity="left|center_vertical"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:textStyle="bold"
        android:text="@string/cooperative" />

    <Button
        android:id="@+id/buttonSocial"
        style="@android:style/Widget.Material.Button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:background="@drawable/btn_home_company"
        android:scaleType="centerCrop"
        android:textSize="50sp"
        android:padding="20dp"
        android:gravity="left|center_vertical"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="@string/company" />

</LinearLayout>